<h1>COURSE CREATE</h1>

<div class="mt-4">
  <h3>Edit course</h3>
  <form action="/courses/{{course._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        value="{{course.name}}"
      ></input>
    </div>
    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <textarea
        id="description"
        name="description"
        class="form-control"
        rows="3"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="level">Trình độ khóa học</label>
      <textarea
        id="level"
        name="level"
        class="form-control"
        rows="3"
      >{{course.level}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">YouTube Video ID</label>
      <input
        type="text"
        id="videoId"
        name="videoId"
        class="form-control"
        placeholder="Enter YouTube video ID"
        value="{{course.videoId}}"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Edit Course</button>
  </form>
</div>